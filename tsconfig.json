{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,

    "paths": {
      "@dydxprotocol/*": ["node_modules/@dydxprotocol/*"]
    },
  },
  "include": [
    "src/**/*"
    ],
  "exclude": [
    "node_modules",
  ]
}
